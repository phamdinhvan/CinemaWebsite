<%- include('../header'); -%>
<section class="login first grey">
    <div class="container">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-12 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-12">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Change Password</h1>
                </div>
                <% if (err && err.length > 0) { %>
                    <p style="color:red"> <%= err %></p> <br>
                <% } %>
                <form class="user" action="/auth/update-password" method="post">
                    <div class="form-group row">
                        <div class="form-group col-sm-8">
                            <label class="fw">Mật khẩu Cũ</label>
                            <input type="password" name="Old_password" class="form-control">
                        </div>
                        <div class="form-group col-sm-8">
                            <label class="fw">Mật khẩu Mới</label>
                            <input type="password" name="New_password" class="form-control">
                        </div>
                        <div class="form-group col-sm-8">
                            <label class="fw">Mật khẩu xác nhận</label>
                            <input type="password" name="Confirm_password" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('../footer'); -%>