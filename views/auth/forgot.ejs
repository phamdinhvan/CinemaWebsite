<%- include('../header'); -%>
<section class="login first grey">
    <div class="container">
        <div class="box-wrapper">				
            <div class="box box-border">
                <div class="box-body">
                    <h4>Quên mật khẩu</h4>
                    <form method="post" action="/auth/quen-mat-khau">
                        <% if (err && err.length > 0) { %>
                            <p style="color:red"> <%= err %></p> <br>
                         <% } %>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="Email" class="form-control">
                        </div>
                        <div class="form-group text-right">
                            <button class="btn btn-primary btn-block">Khôi phục</button>
                        </div>
                        <div class="form-group text-center">
                            <span class="text-muted">Trở về đăng nhập?</span> <a href="/auth/login">Đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../footer'); -%>
