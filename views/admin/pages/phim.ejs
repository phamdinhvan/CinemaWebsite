<%- include('../layout/header'); -%>
    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Phim
            <a href="insertphim" class="btn btn-success btn-circle pull-left">
                <i>+</i>
            </a>
        </h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Phim</th>
                                <th>NC Chiếu</th>
                                <th>PosTer</th>
                                <th>Thời Gian</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Tên Phim</th>
                                <th>NC Chiếu</th>
                                <th>PosTer</th>
                                <th>Thời Gian</th>
                                <th>Xóa</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            <% phims.map(item =>{ %>
                                <tr>
                                    <td>
                                        <%= item.id %>
                                    </td>
                                    <td>
                                        <%= item.Ten %>
                                    </td>
                                    <td>
                                        <%= item.NgayCongChieu %>
                                    </td>
                                    <td>
                                        <div>
                                            <img class="img-fluid" src="/default/image/<%= item.id %>" height="150" width="150" alt=" " />
                                        </div>
                                    </td>
                                    <td>
                                        <%= item.ThoiLuong %>
                                    </td>
                                    <td>
                                        <form method="POST" action="/insert/deletephim/<%= item.id %>">
                                            <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../layout/footer'); -%>