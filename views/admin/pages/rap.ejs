<%- include('../layout/header'); -%>
<!-- End of Topbar -->

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Rạp <a href="insertrap" class="btn btn-success btn-circle pull-left">
            <i>+</i>
        </a></h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Rạp</th>
                        <th>Loại Rạp</th>
                        <th>KT Ngang</th>
                        <th>KT Dọc</th>
                        <th>Xóa</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Tên Rạp</th>
                        <th>Loại Rạp</th>
                        <th>KT Ngang</th>
                        <th>KT Dọc</th>
                        <th>Xóa</th>
                    </tr>

                    </tfoot>
                    <tbody>
                    <% raps.map(item =>{ %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.TenRap %></td>
                            <td><%= item.LoaiRap %></td>
                            <td><%= item.KTNgang %></td>
                            <td><%= item.KTDoc %></td>
                            <td>
                                <form method="POST" action="/insert/deleterap/<%= item.id %>">
                                    <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

<!-- Footer -->
<%- include('../layout/footer'); -%>